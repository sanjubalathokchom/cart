<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MakePayment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="100dp">
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/baseline_arrow_back_24"></Button>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Make Payment"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        android:id="@+id/li">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beverages chosen : "
            android:textSize="23dp"
            android:id="@+id/Beverage"></TextView>

        <TextView
            android:id="@+id/Beverage_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket details(no.of tickets) : "
            android:textSize="23dp"
            android:id="@+id/Ticket"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:id="@+id/Ticket_no"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li1"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amount : "
            android:textSize="23dp"
            android:id="@+id/Total_amount"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:id="@+id/amount"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li2"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="Apply Coupon : "
            android:id="@+id/coupon"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="50"
            android:id="@+id/coupon_amount"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li3"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="Final Amount : "
            android:id="@+id/Final_amount"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="750"
            android:id="@+id/f_amount"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_below="@id/li4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Payment Option : "
            android:textSize="23dp"
            android:id="@+id/payment_options"></TextView>

        <Button
            android:id="@+id/google_pay"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Google Pay"></Button>

        <Button
            android:id="@+id/Phone_pay"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginLeft="10dp"
            android:text="Phone Pay"></Button>

        <Button
            android:id="@+id/Paytm"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Paytm"></Button>
        <Button
            android:id="@+id/PAY"
            android:layout_width="280dp"
            android:layout_marginTop="20dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:backgroundTint="@color/darkblue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/white"
            android:text="PAY">
        </Button>

    </LinearLayout>


</RelativeLayout>

